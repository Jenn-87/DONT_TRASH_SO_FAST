<div class="cards">
  <% @surpluses.each do |surplus| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path surplus.photo.key, height: 300, crop: :fill %> ')">
      <div class="card-category-banner">
        <div class="card-quantity">
          Qty. <%= surplus.quantity %>
        </div>
        <div class="card-location">
          <%= surplus.location.split(',').first %>
        </div>
      </div>
      <%= link_to surplus.name, surplus_path(surplus) %>
    </div>
  <% end %>
</div>
