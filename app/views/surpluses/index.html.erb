<div class="container">
  <%= form_tag surpluses_path, method: :get do %>
    <div class="search-form-control form-group mb-3">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control string required",
          placeholder: "Find local leftovers"
        %>
        <%= submit_tag "Search", class: "btn btn-ghost" %>
    </div>
  <% end %>
  <!-- <p>Results <%= Surplus.count %> </p> -->
  <%=  render 'shared/surplus_index_card' %>

  <div class="text-center my-4">
    <%= link_to 'Create a new surplus', new_surplus_path, class: "btn btn-success" %>
  </div>
</div>
